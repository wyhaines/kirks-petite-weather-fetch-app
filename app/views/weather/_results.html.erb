<div class="space-y-6">
  <!-- Cache Indicator -->
  <div class="flex justify-end">
    <% if weather_data[:from_cache] %>
      <span class="cache-indicator cached">
        <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
        </svg>
        Cached Result
      </span>
    <% else %>
      <span class="cache-indicator fresh">
        <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
        </svg>
        Fresh Data
      </span>
    <% end %>
  </div>

  <!-- Current Weather -->
  <div class="weather-card">
    <div class="flex justify-between items-start mb-4">
      <div>
        <h2 class="text-2xl font-bold text-white">
          <%= weather_data[:location][:name] %><% if weather_data[:location][:state].present? %>, <%= weather_data[:location][:state] %><% end %>
        </h2>
        <p class="text-gray-400"><%= weather_data[:location][:country] %></p>
      </div>
      <div class="text-right">
        <p class="text-4xl font-bold text-white"><%= weather_data[:current][:temperature] %>Â°F</p>
        <p class="text-gray-400">Feels like <%= weather_data[:current][:feels_like] %>Â°F</p>
      </div>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 pt-4 border-t border-gray-700">
      <div>
        <p class="text-gray-400 text-sm">Condition</p>
        <p class="text-white font-semibold"><%= weather_data[:current][:description] %></p>
      </div>
      <div>
        <p class="text-gray-400 text-sm">High / Low</p>
        <p class="text-white font-semibold"><%= weather_data[:current][:temp_max] %>Â° / <%= weather_data[:current][:temp_min] %>Â°</p>
      </div>
      <div>
        <p class="text-gray-400 text-sm">Humidity</p>
        <p class="text-white font-semibold"><%= weather_data[:current][:humidity] %>%</p>
      </div>
      <div>
        <p class="text-gray-400 text-sm">Wind</p>
        <p class="text-white font-semibold"><%= weather_data[:current][:wind_speed] %> mph <%= weather_data[:current][:wind_direction] %></p>
      </div>
    </div>

    <div class="grid grid-cols-2 gap-4 mt-4 pt-4 border-t border-gray-700">
      <div>
        <p class="text-gray-400 text-sm">Sunrise</p>
        <p class="text-white font-semibold"><%= weather_data[:current][:sunrise] %></p>
      </div>
      <div>
        <p class="text-gray-400 text-sm">Sunset</p>
        <p class="text-white font-semibold"><%= weather_data[:current][:sunset] %></p>
      </div>
    </div>
  </div>

  <!-- 5-Day Forecast -->
  <div class="weather-card">
    <h3 class="text-xl font-bold text-white mb-4">5-Day Forecast</h3>
    <div class="grid grid-cols-1 md:grid-cols-5 gap-4">
      <% weather_data[:forecast].each do |day| %>
        <div class="bg-gray-700 rounded-lg p-4 text-center">
          <p class="text-gray-400 text-sm mb-2"><%= day[:date].split(',').first %></p>
          <div class="my-3">
            <img src="https://openweathermap.org/img/wn/<%= day[:icon] %>@2x.png" alt="<%= day[:weather] %>" class="w-12 h-12 mx-auto">
          </div>
          <p class="text-white text-sm mb-2"><%= day[:weather] %></p>
          <p class="text-white font-bold">
            <%= day[:high] %>Â° <span class="text-gray-400">/</span> <span class="text-gray-400"><%= day[:low] %>Â°</span>
          </p>
          <p class="text-gray-400 text-xs mt-1">ðŸ’§ <%= day[:avg_humidity] %>%</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Last Updated -->
  <div class="text-center text-gray-500 text-sm">
    Data fetched at: <%= weather_data[:fetched_at].strftime("%B %d, %Y at %I:%M %p") %>
  </div>
</div>